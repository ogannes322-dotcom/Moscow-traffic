function showDay(d) {
    const block = document.getElementById("card");
    const info = data[d];

    block.innerHTML = `
        <b>03@C65==>ABL:</b> ${info.load}<br>
        <b>"@0B0 B>?;820:</b> ${info.fuel}<br>
        <b>$8=0=A>2K5 ?>B5@8:</b> ${info.money}<br>
        <b>A>15==>ABL 4=O:</b> ${info.note}
    `;

    block.classList.remove("show");
    setTimeout(() => block.classList.add("show"), 30);

